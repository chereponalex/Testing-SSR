{
  "presets": [
    [
      "@babel/preset-env",
      {
        "bugfixes": true
      }
    ],
    ["@babel/preset-react", {"runtime": "automatic"}],
    "@babel/preset-typescript"
  ],
  "plugins": [
    "@loadable/babel-plugin",
    "babel-plugin-styled-components",
    ["@babel/plugin-proposal-class-properties", { "loose": false }]
  ],
  "ignore": ["node_modules", "build"]
}
